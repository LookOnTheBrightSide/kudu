<%= simple_form_for @card, html:{multpart: true} do |f| %>
	<% if @card.errors.any?%>
		<div class="errors">
			<!-- < pluralize(@card.errors.count), "error"> -->
			<ul>
				<% @card.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div><!-- /.errors -->
	<% end %>
	<div class="form-group">
	  <%= f.input :image, label:"Image", input_html:{ class: "form-control" } %>
	  <%= f.input :title, label: "Title", input_html:{ class: "form-control" } %>
	  <%= f.input :description, label: "Description", input_html:{ class: "form-control" } %>
	  <%= f.input :start_date, label: "Start Date", input_html:{ class: "form-control" } %>
	  <%= f.input :end_date, label: "End Date", input_html:{ class: "form-controls" } %>
	  <%= f.input :active, label: "Active", as: :radio_buttons, input_html:{ class: "form-control" } %>
	  <%= f.input :premium, label: "Premium", as: :radio_buttons, input_html:{ class: "form-control" } %>
	  <%= f.input :interview_first, label:"Interview", as: :radio_buttons, input_html:{ class: "form-control" } %>
	  <%= f.button :submit, input_html:{ class: "btn btn-success" } %>
  </div><!-- /.form-group -->
<% end %>

